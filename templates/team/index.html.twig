{% extends 'base.html.twig' %}
{% import '_ui.html.twig' as ui %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.name }}</td>
                <td>
                    {{ ui.btn('Show', path('app_team_show', {id: team.id}), 'outline-secondary') }}
                    {{ ui.btn('Edit', path('app_team_show', {id: team.id}), 'primary') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ ui.btn('Create new', path('app_team_new'), 'success') }}

{% endblock %}
