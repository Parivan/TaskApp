{% extends 'base.html.twig' %}
{% import '_ui.html.twig' as ui %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2 mb-3">
        {{ ui.btn('Back to list', path('app_team_index'), 'outline-secondary') }}
        {{ ui.btn('Edit', path('app_team_edit', {'id': team.id}), 'primary') }}
        {{ include('team/_delete_form.html.twig') }}
    </div>

{% endblock %}
