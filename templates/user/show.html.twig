{% extends 'base.html.twig' %}
{% import '_ui.html.twig' as ui %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role.label ?? '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2 mb-3">
        {{ ui.btn('Back to list', path('app_user_index'), 'outline-secondary') }}
        {{ ui.btn('Edit', path('app_user_edit', {'id': user.id}), 'primary') }}
        {{ include('user/_delete_form.html.twig') }}
    </div>

{% endblock %}
