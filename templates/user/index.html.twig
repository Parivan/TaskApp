{% extends 'base.html.twig' %}
{% import '_ui.html.twig' as ui %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.role.label ?? '' }}</td>
                <td>
                    {{ ui.btn('Show', path('app_user_show', {id: user.id}), 'outline-secondary') }}
                    {{ ui.btn('Edit', path('app_user_edit', {id: user.id}), 'primary') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ ui.btn('Create new', path('app_user_new'), 'success') }}

{% endblock %}
