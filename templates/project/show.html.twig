{% extends 'base.html.twig' %}
{% import '_ui.html.twig' as ui %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    {{ project.status.label }}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.Description }}</td>
            </tr>
            <tr>
                <th>Team</th>
                <td>{{ project.Team.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2 mb-3">
        {{ ui.btn('Back to list', path('app_project_index'), 'outline-secondary') }}
        {{ ui.btn('Edit', path('app_project_edit', {'id': project.id}), 'primary') }}
        {{ include('project/_delete_form.html.twig') }}
    </div>

    {{ ui.btn('Create task', path('app_task_new', { project: project.id }), 'success') }}

    {% for status, tasks in tasks_by_status %}

        <h3 class="mt-4 mb-2">
            {{ status }}
            <span class="badge text-bg-secondary">{{ tasks|length }}</span>
        </h3>

        {% if tasks_by_status[status] is empty %}
            <div class="text-muted mb-4">
                No tasks in this status.
            </div>
        {% else %}
            <div class="table-responsive mb-4">
                <table class="table table-sm table-hover align-middle">
                    <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Priority</th>
                        <th>Assignee</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for task in tasks_by_status[status] %}
                        <tr>
                            <td class="fw-semibold">
                                {{ task.title }}
                            </td>

                            <td>
                                {{ task.priority.label }}
                            </td>

                            <td>
                                {{ task.assignee ? task.assignee.name : 'â€”' }}
                            </td>

                            <td class="text-end">
                                {{ ui.btn('View', path('app_task_show', {id: task.id}), 'outline-secondary') }}
                                {{ ui.btn('Edit', path('app_task_edit', {id: task.id}), 'primary') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

    {% endfor %}

{% endblock %}
