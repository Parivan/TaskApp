{
    "config": {
        "fail-on-first-error": true,
        "verbosity": "normal"
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "CaptainHook.Tools.PHPLint"
            },
            {
                "action": "vendor/bin/phpcs -q {$STAGED_FILES|of-type:php}",
                "conditions": [
                    { "exec": "CaptainHook.FileStaged.OfType", "args": ["php"] }
                ]
            },
            {
                "action": "vendor/bin/phpstan analyse",
                "conditions": [
                    { "exec": "CaptainHook.FileStaged.OfType", "args": ["php"] }
                ]
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "vendor/bin/phpstan analyse",
                "conditions": [
                    { "exec": "CaptainHook.FileChanged.OfType", "args": ["php"] }
                ]
            },
            {
                "action": "composer test",
                "conditions": [
                    { "exec": "CaptainHook.FileChanged.OfType", "args": ["php"] }
                ]
            }
        ]
    }
}
